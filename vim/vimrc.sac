fu! Ucfirst(word)
	let up = substitute( a:word, "^.", "\\=toupper(submatch(0))", "")
	return up
endfunction

fu! Firstletter(word)
	let first = substitute( a:word, '^\(.\).*$', '\1', "")
	return first
endfunction

fu! Underscore()
	let str = expand('<cword>')
	let n = str2nr( str )
	let underscore = repeat('\\_', n)
	let newline = substitute(getline('.'), '\d\+', underscore, '' )
	call setline(".", newline)
endfunction
