{
  "diagnostic.displayByAle": true,
  "languageserver": {
    "json": {
      "command": "json-language-server",
      "args": ["start"],
      "filetypes": ["json"],
      "ignoredRootPaths": ["~"]
    },
    "yaml": {
      "command": "yaml-language-server",
      "args": ["start"],
      "filetypes": ["yaml"],
      "ignoredRootPaths": ["~"]
    },
    "haskell": {
       "command": "ghcide",
       "args": [
         "--lsp"
       ],
       "rootPatterns": [
         ".stack.yaml",
         ".hie-bios",
         "BUILD.bazel",
         "cabal.config",
         "package.yaml"
       ],
       "filetypes": [
         "hs",
         "lhs",
         "haskell"
       ]
    }
  },
  "sh.enable": true,
  "sh.commandPath": "C:/Users/owuser/AppData/Roaming/npm"
}

