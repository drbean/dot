function new () {
    local arg league school n
    OPTIND=1
    while getopts 'l:s:n:' arg
    do
        case ${arg} in
            l) league=${OPTARG};;
            s) school=${OPTARG};;
            n) n=${OPTARG};;
            *) return 1 # illegal option
        esac
    done
    if [[ -z "$n" ]]
	then n=2
    fi
    cd ~/$SEMESTER/
    SCHOOL=$school \
    LEAGUE=$league \
    N=$n \
    SESSION=1 \
    PREVSESSION=$(($SESSION-1)) \
    screen -c /home/$USER/dot/screen/setup.rc -dR n_$league
    cd -
}

