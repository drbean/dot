    cd -
}

function jigsaw () {
    local arg league round topic n
    OPTIND=1
    while getopts 'l:r:t:n:' arg
    do
        case ${arg} in
            l) league=${OPTARG};;
            r) round=${OPTARG};;
            t) topic=${OPTARG};;
            n) n=${OPTARG};;
            *) return 1 # illegal option
        esac
    done
    cd ~/$SEMESTER/$league
    LEAGUE=$league \
    ROUND=$round \
    NEXTROUND=$(($round+1)) \
    PREVROUND=$(($round-1)) \
    TOPIC=$topic \
    N=${n:-3} \
    screen -c /home/$USER/dot/screen/jigsaw.rc -dR jigsaw_$league
    cd -
}

