# file: qb
# qb parameter completion
# copied from web
# https://www.baeldung.com/linux/shell-auto-completion

function _qb () {
	local cur prev opts fileopts diropts keywords
	COMPREPLY=()
	cur="${COMP_WORDS[COMP_CWORD]}"
	prev="${COMP_WORDS[COMP_CWORD-1]}"
	prev2="${COMP_WORDS[COMP_CWORD-2]}"
	opts="-w -a"
	fileopts="-w"
	# diropts="-s"

	app="qb"
	prof="jasoncclu ylkao jkliang"
	words=""

	# if [[ ${prev} =~ ${fileopts} ]]; then
	# COMPREPLY=( $(compgen -f -- ~/profqb/${cur}) )
	# return 0
	# elif [[ ${prev} =~ ${diropts} ]]; then
	# COMPREPLY=( $(compgen -d -- ~/profqb/${cur}) )
	# return 0
	# fi

	case "${prev}" in
		qb)
			words="-w -a"
			;;
		-w)
			cd ~/dot/screen/qbs
			rc=( $(compgen -f -- ${cur}) )
			COMPREPLY=( ${rc[@]%.rc} )
			return 0
			;;
		*)
			words="-a"
			;;
	esac
	COMPREPLY=( $(compgen -W "$words" -- $cur) )
}
complete -F _qb qb
