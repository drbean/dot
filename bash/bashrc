function pres () {
    OPTIND=1
    local arg course=presentation topic story
    while getopts 't:s:' arg
    do
        case ${arg} in
            t) topic=${OPTARG};;
            s) story=${OPTARG};;
            *) return 1 # illegal option
        esac
    done
	cd ~/class/presentation
	COURSE=$course \
	VIEW=$course \
	TOPIC=$topic \
	STORY=$story \
	FORM=0 \
	screen -c /home/$USER/dot/screen/course.rc -dR pres_$topic
	cd -
}

